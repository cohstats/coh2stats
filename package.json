{
  "name": "coh2ladders",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/firebase/**"
    ]
  },
  "scripts": {
    "functions": "yarn workspace @coh2ladders/functions",
    "web": "yarn workspace @coh2ladders/web",
    "app": "yarn workspace @coh2ladders/app",
    "shared": "yarn workspace @coh2ladders/shared",
    "fix": "run-s fix:*",
    "fix:eslint": "eslint --fix packages/**/*.{ts,tsx,js}",
    "fix:prettier": "prettier --loglevel warn --write .",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint packages/**/*.{ts,tsx,js}",
    "lint:prettier": "prettier --check .",
    "react-spring-issue-1078": "find node_modules -path \\*@react-spring/\\*/package.json -exec sed -i.bak 's/\"sideEffects\": false/\"sideEffects\": true/g' {} +",
    "clean": "rm -fr node_modules && rm -fr packages/functions/node_modules && rm -fr packages/web/node_modules && rm -fr packages/app/node_modules",
    "reinstall": "yarn run clean && yarn install"
  },
  "version": "0.1.2",
  "description": "FB Project for COH2 ladders",
  "main": "index.js",
  "author": "Petr Vecera",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^6.1.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^24.7.0",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.10.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "source-map-explorer": "^2.5.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "date-fns": "^2.25.0"
  }
}
